<UserControl x:Name="WarehouseUI" x:Class="QuanLiCantin.Warehouse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLiCantin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FFE2D4D4" Width="778" Height="544" Loaded="WarehouseUI_Loaded">
    <Grid>
        <DataGrid x:Name="ItemTable" ItemsSource="{Binding wh_items}" AutoGenerateColumns="False" Background="#FFE2D4D4" Margin="1,0,0,106" RenderTransformOrigin="1.218,0.295" SelectionChanged="ItemTable_SelectionChanged" BorderBrush="#89A04949">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="Turquoise"/>
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1, 2, 2, 3"/>
                </Style>

                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1, 2, 2, 3"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header= "ID" Binding="{Binding ID}" Width= "200"/>
                <DataGridTextColumn Header= "Ten" Binding="{Binding Name}" Width= "200"/>
                <DataGridTextColumn Header= "Don vi tinh" Binding="{Binding QuantityUnit}" Width= "200"/>
                <DataGridTextColumn Header= "Khoi luong" Binding="{Binding Quantity}" Width= "*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddItemButton" Content="Them mat hang..." HorizontalAlignment="Left" Height="55" Margin="9,451,0,0" VerticalAlignment="Top" Width="251" Click="AddItemButton_Click"/>
    </Grid>
</UserControl>
