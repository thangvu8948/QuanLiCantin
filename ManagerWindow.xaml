        <Button x:Name="Exit" Content="    Exit            " HorizontalAlignment="Left" Height="79" Margin="0,268,0,0" VerticalAlignment="Top" Width="214" Background="#FF151313" Foreground="White" FontSize="22" Click="Exit_Click" BorderBrush="#FF151313" MouseEnter="Exit_MouseEnter" MouseLeave="Exit_MouseLeave" Grid.Row="1"/>
        <Button x:Name="Employee" Content=" Employee" HorizontalAlignment="Left" Height="79" Margin="0,110,0,0" VerticalAlignment="Top" Width="214" Background="#FF151313" Foreground="White" FontSize="22" Click="Employee_Click" MouseEnter="Employee_MouseEnter" BorderBrush="#FF151313" MouseLeave="Employee_MouseLeave" Grid.Row="1" IsCancel="True"/>

    </Grid>
</Window>
